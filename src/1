<?php
declare (strict_types=1);

$firstname = ucfirst(readline('Vorname?: '));
$lastname = ucfirst(readline('Nachname?: '));
$age = readline('Alter?: ');

if ($age === false) {  
  throw new \Exception;
}

function helloWorld(string $firstname, string $lastname)
{
   echo "Hello $firstname $lastname";
}

function age(int $age)
{
   echo "\n $age";
}

helloWorld($firstname, $lastname);
age((int)$age); 
